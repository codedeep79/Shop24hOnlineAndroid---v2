<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trungnguyenhau.shoponline.Fragment.CategoryFragment">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/icon_sport"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="@string/ic_sport_title"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_description"
        android:text="@string/ic_sport_description"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/rt_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_skip"
            android:text="@string/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="8dp"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_next"
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textSize="15dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <View
                android:id="@+id/indicator1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/bg_indicator_active"/>

            <View
                android:id="@+id/indicator2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toRightOf="@+id/indicator1"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_indicator_unactive"/>

            <View
                android:id="@+id/indicator3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toRightOf="@+id/indicator2"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_indicator_unactive"/>

            <View
                android:id="@+id/indicator4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_toRightOf="@+id/indicator3"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_indicator_unactive"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
